<Window x:Class="TaskPulse.Views.CreateProjectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskPulse.Views"
        mc:Ignorable="d"
        Title="CreateProjectWindow" Height="400" Width="350" Background="Transparent">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="8*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" CornerRadius="10 10 0 0" Background="#00A19A">

            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="Создание проекта" Style="{StaticResource titleText}"/>
            </StackPanel>
        </Border>

        <Border Grid.Row="1" CornerRadius="0 0 10 10" Background="#00A19A">

            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="Введите название проекта" Style="{StaticResource normalText}"/>
                
                <Border Background="White" BorderThickness="1" BorderBrush="#acb0af" Margin="0 5 0 70" CornerRadius="5" MaxWidth="200" MinWidth="100" >
                    <Grid Margin="7 9">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Image Source="/Resources/key.png" Height="20" HorizontalAlignment="Right" Width="20"/>
                        <TextBlock x:Name="textProject" MouseDown="textProject_MouseDown" Text="Проект1" Style="{StaticResource textHint}"/>
                        <TextBox x:Name="project" Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" TextChanged="project_TextChanged" Style="{StaticResource textBox}"/>
                    </Grid>
                </Border >

                <Button Content="Войти" Command="{Binding AuthCommand}" Style="{StaticResource mainbutton}" Background="White" Foreground="Black" Margin="0 10 0 -20 "/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
