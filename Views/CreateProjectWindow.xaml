<Window x:Class="TaskPulse.Views.CreateProjectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskPulse.Views"
        xmlns:vm="clr-namespace:TaskPulse.ViewModels"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStyle="None"
        Title="CreateProjectWindow" Height="400" Width="350" Background="Transparent" WindowStartupLocation="CenterScreen">
    <Grid d:DataContext="{d:DesignInstance Type=vm:CreateProjectWindowViewModel, IsDesignTimeCreatable=True}">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="8*"/>
        </Grid.RowDefinitions>

        <Border Panel.ZIndex="1">
            <StackPanel HorizontalAlignment="Right" VerticalAlignment="Top">
                <Button Background="Transparent" Command="{Binding CloseCommand}" Margin="-10 -10">
                    <Image Source="/Resources/close.png"  Panel.ZIndex="1"  Style="{StaticResource imgClose}"/>
                </Button>
            </StackPanel>
        </Border>


        <Border Grid.Row="0" CornerRadius="10 10 0 0" Background="#00A19A" >

            <StackPanel VerticalAlignment="Center" Margin="0 10 0 0">
                <TextBlock Text="Создание проекта" Style="{StaticResource titleText}"/>
            </StackPanel>
        </Border>

        <Border Grid.Row="1" CornerRadius="0 0 10 10" Background="#00A19A">

            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="Введите название проекта" Style="{StaticResource normalText}"/>
                
                <Border Background="White" BorderThickness="1" BorderBrush="#acb0af" Margin="0 5 0 70" CornerRadius="5" MaxWidth="200" MinWidth="100" >
                    <Grid Margin="7 9">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Image Source="/Resources/key.png" Height="20" HorizontalAlignment="Right" Width="20"/>
                        <TextBlock x:Name="textProject" MouseDown="textProject_MouseDown" Text="Название проекта" Style="{StaticResource textHint}"/>
                        <TextBox x:Name="project" Text="{Binding ProjectName, UpdateSourceTrigger=PropertyChanged}" TextChanged="project_TextChanged" Style="{StaticResource textBox}"/>
                    </Grid>
                </Border >

                <Button Content="Создать" Command="{Binding newProjectCommand}" Style="{StaticResource mainbutton}" Background="White" Foreground="Black" Margin="0 10 0 -20 "/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
